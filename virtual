#!/bin/bash

c_echo() {
	if [[ $2 == "red" ]]; then
		echo -e "\033[0;31m$1\033[00m"
	elif [[ $2 == "green" ]]; then
		echo -e "\033[0;32m$1\033[00m";
	else
		echo -e "\033[0;35m$1\033[00m"
	fi
}

if ! test `id -u` -eq 0; then
	c_echo "Permission non authorisé" "red";
	exit 0
fi

# Global varible.
APACHE_SITE_DIR="/etc/apache2/sites-available";
LOGLEV="warn"

usage() {

echo "usage:
 mk-virtual-host add <docroot> <servername>
 mk-virtual-host remove <servername>

 <docroot> le documentroot, répertoire ou le serveur va trouvé les fichiers à servir.
 <servername> le nom de domaine sur projet
"
}

add_vhost() {

# Variable global
SERVERNAME=""
HTTP=80
C=0

case $# in
		2)
			if [ ! -d "$1" ]; then
				usage
				exit 1
			else
				if [ -f $APACHE_SITE_DIR/$2".conf" ]; then
					c_echo "Ce domaine existe" "red"
					exit 1
				else
					DOCROOT=$1
					SERVERNAME=$2
					C=1
				fi
			fi
		;;
		*)
			usage
			exit 1
		;;
esac

if (( $C == 1 )); then

echo "<VirtualHost *:$HTTP>
	
	ServerName $SERVERNAME
	serverAlias www.$SERVERNAME
	DocumentRoot $DOCROOT

	<Directory $DOCROOT/>
		Options Indexes Multiviews FollowSymLinks
		AllowOverride All
		require all granted
	</Directory>
	
	ErrorLog "$DOCROOT/error.log"
	CustomLog "$DOCROOT/access.log" combined
	LogLevel $LOGLEV

</VirtualHost>" > $APACHE_SITE_DIR/$SERVERNAME".conf"

	cd $APACHE_SITE_DIR
	a2ensite $SERVERNAME".conf" > /dev/null 2>&1

	if `service apache2 reload > /dev/null 2>&1`; then

		chmod 755 -R $DOCROOT
		echo "127.0.0.1 $SERVERNAME www.$SERVERNAME" >> /etc/hosts
		c_echo "Domaine créé avec succés.[DONE]" "green"
		exit 0

	else

		c_echo "Une erreur est survenu" "red"
		a2dissite $SERVERNAME".conf" > /dev/null
		rm $APACHE_SITE_DIR/$SERVERNAME".conf"
		exit 1

	fi

else

	c_echo "Une erreur est survenu" "red"
	exit 1

fi

}

remove_vhost() {

	if [ -f "$APACHE_SITE_DIR/$1.conf" ]; then

		# suppression de la configuration
		cd $APACHE_SITE_DIR
		a2dissite "${1}.conf"
		service apache2 reload

		# suppression du fichier de la configuration
		rm "${1}.conf"

		# suppression de l'entrer du domaine dans le fichier /etc/hosts
		sed -re "/^\n?127\.0\.0\.1\s+${1}\swww.${1}\n?$/ d" < /etc/hosts > /tmp/hosts

		if [ -s /tmp/hosts ]; then
			cp /tmp/hosts /etc/hosts
		fi

		exit 0

	else

		c_echo "Ce domain n'existe pas!" "red"
		exit 1

	fi

}

# busness logic
PARAM=$1

if [[ $PARAM == "add" ]]; then
	if (( $# == 3 )); then
		add_vhost $2 $3
		exit 0
	else
		usage
		exit 1
	fi
elif [[ $PARAM == "remove" ]]; then
	remove_vhost $2
	exit 0
else
	usage
	exit 1
fi
